<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="apliacionParaTallerEnJSPPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entities.Tienda</class>
    <class>entities.Usuariocomprador</class>
    <class>entities.Crearua</class>
    <class>entities.Productoagregarpedido</class>
    <class>entities.Usuarioayuda</class>
    <class>entities.Pedido</class>
    <class>entities.Catalogo</class>
    <class>entities.Usuariolocal</class>
    <class>entities.Producto</class>
    <class>entities.Persona</class>
    <class>entities.Productoagregarcatalogo</class>
    <class>entities.Boleta</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tallerappjsp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
